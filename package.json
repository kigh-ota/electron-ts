{
  "name": "electron-ts",
  "version": "1.0.0",
  "description": "",
  "main": "./app/generated/main.js",
  "scripts": {
    "start": "electron --debug .",
    "watch:dev": "concurrently \"webpack --watch --config webpack.dev.js\" \"tsc -w --noEmit\"",
    "build:dev": "tsc --noEmit && webpack --config webpack.dev.js",
    "build:prod": "tsc --noEmit && webpack --config webpack.prod.js",
    "test:e2e": "mocha --require ts-node/register './src/e2e/**/*.spec.ts'",
    "lint": "eslint 'src/**/*.ts{x,}'"
  },
  "author": "kigh-ota",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "license": "ISC",
  "dependencies": {
    "electron": "^8.2.3",
    "electron-log": "^4.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/preset-env": "7.9.5",
    "@babel/preset-react": "7.9.4",
    "@babel/preset-typescript": "7.9.0",
    "@types/mocha": "7.0.2",
    "@types/node": "12.12.37",
    "@types/react": "16.14.34",
    "@types/react-dom": "16.9.7",
    "@typescript-eslint/eslint-plugin": "2.30.0",
    "@typescript-eslint/parser": "2.30.0",
    "babel-loader": "8.1.0",
    "clean-webpack-plugin": "3.0.0",
    "concurrently": "5.2.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.19.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.0",
    "mocha": "7.1.2",
    "prettier": "2.0.5",
    "spectron": "10.0.1",
    "ts-node": "8.9.1",
    "typescript": "3.8.3",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-merge": "4.2.2"
  }
}
